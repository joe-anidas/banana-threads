      "label": "Newsletter Heading",
      "default": "Be a Banana Insider"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Your email"
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Button Text",
      "default": "Yes, I'm In"
    },
    {
      "type": "text",
      "id": "social_heading",
      "label": "Social Heading",
      "default": "Connect with Us"
