{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },{
  "type": "checkbox",
  "id": "show_social",
  "default": true,
  "label": "Show social icons"
},
{
  "type": "checkbox",
  "id": "enable_follow_on_shop",
  "default": true,
  "label": "Enable Follow on Shop"
},
    {
      "type": "header",
      "content": "Left Section Links"
    },
    {
      "type": "url",
      "id": "shipping_link",
      "label": "Shipping Link"
    },
    {
      "type": "url",
      "id": "refund_link",
      "label": "Refund Policy Link"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Terms and Conditions Link"
    },
    {
      "type": "url",
      "id": "privacy_link",
      "label": "Privacy Policy Link"
    },
    {
      "type": "url",
      "id": "hello_link",
      "label": "Say Hello Link"
    },
    {
