{%- style -%}
  :root {
    --color-foreground: none !important;
        --inputs-radius: 30px !important;
  }

    /* Left Section Styling */
.footer-block--left {
    flex: 1;
    min-width: 200px;
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    align-items: center; /* This centers all content horizontally */
    text-align: left; /* This centers the text */
}

/* Links Styling - Make click area fit content */
.footer-block__links {
    display: flex;
    flex-direction: column;
    gap: 3px;
    margin-bottom: 20px;
    margin-left: 0; /* Remove the left margin */
    width: auto; /* Let the width be determined by content */
}

.footer-block__links a {
    padding: 5px 0; /* Add some vertical padding for better click area */
    display: inline-block; /* Make the click area only as wide as the text */
    text-align: left; /* Center the text */
}
  .newsletter-form__field-wrapper .field__input {
    padding: 1rem;
}
  
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background: #FFFFFF !important;
    color: #000000;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
}
  /* Footer Newsletter Section */
.footer-block--right {
  text-align: center;
  width: 100%;
  max-width: 500px;
  margin: auto 0 !important;
}

.footer-block__heading {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 20px;
  color: #000;
  text-align: center;
}


/* Newsletter Form Styling */
.newsletter-form__field-wrapper {
  display: flex;
  gap: 0px;
  width: 100%;
  align-items: center;
}

.field {
  flex: 1;
}

.field__input {
  width: 100%;
  height: 45px;
 
  color: #000;
  border: 0px solid #ffffff;
 
  background: #fff;
}

/* Remove required field asterisk */
.field__input:required {
  box-shadow: none;
}

/* CTA Button Styling - Smaller without border */
.footer-block__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 45px;
  padding: 0 20px;
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: #fff;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  transition: opacity 0.15s;
  background-color: #000;
  margin-left: 10px;
}

.footer-block__cta:hover {
  opacity: 0.9;
  color: #fff !important;
  background-color: #000 !important;
}

/* Mobile responsiveness */
@media screen and (max-width: 749px) {
  .footer-block__heading {
    font-size: 22px !important;
  }
  
  .newsletter-form__field-wrapper {
    flex-direction: column !important;
    gap: 15px !important;
  }
  
  .field__input,
  .footer-block__cta {
    height: 45px !important;
    width: 100% !important;
  }
  
  .footer-block__cta {
    margin-left: 0 !important;
  }
}

