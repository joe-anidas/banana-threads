    gap: 2rem;
  }
  
  /* Media gallery styling */
  .product__media-wrapper {
    width: 50%;
    overflow-x: auto;
    white-space: nowrap;
    scroll-snap-type: x mandatory;
    display: flex;
    flex-direction: row;
    align-items: center;
