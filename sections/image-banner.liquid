      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
#Banner-{{ section.id }} .banner__media img {
  width: 120%;
  height: 120%; /* Creates zoom effect */
  object-fit: cover;
  object-position: bottom; /* Hard-lock to bottom edge */
  display: block; /* Removes inline spacing */
  transform: translateY(-12%); /* Fine-tune position */
}
/* Mobile Banner - Precise Center Bottom Zoom */
@media screen and (max-width: 749px) {

  /* Move image view to bottom (standalone version) */
/* Pure bottom-aligned image without relative positioning */
#Banner-{{ section.id }} .banner__media img {
  width: 100%;
  height: 120%; /* Creates zoom effect */
  object-fit: cover;
  object-position: bottom; /* Hard-lock to bottom edge */
  display: block; /* Removes inline spacing */
