    display: inline-flex;
    gap: 1rem;
  }
  
  .product__media-wrapper .product-media-container > * {
    scroll-snap-align: start;
    min-width: 80%;
    flex-shrink: 0;
  }
  
  /* Hide scrollbar but keep functionality */
  .product__media-wrapper::-webkit-scrollbar {
    display: none;
  }
  
  /* Product info styling */
  .product__info-wrapper {
    width: 50%;
    position: sticky;
    top: 2rem;
    padding: 0 2rem;
  }
  
